{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "types": ["node", "jest"],
    "lib": ["es6", "dom"]
  },
  "include": ["server.ts", "app.hooks.ts", "services/**/*.ts", "models/**/*.ts", "client/src/**/*.tsx"],
  "exclude": ["node_modules"]
}
